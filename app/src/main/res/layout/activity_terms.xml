<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fontStyle5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logosnappyy">

        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_20"
            android:text="Terms And Conditions by SNAPPYY"
            android:visibility="visible"
            android:fontFamily="@font/tcm">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:id="@+id/tv_queone"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:text="Topic Name "
                android:visibility="gone">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:id="@+id/tv_queoneans"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="visible"
                android:text="@string/tnc"
                android:fontFamily="@font/tcm"
                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/black"
                android:visibility="gone"/>


        </LinearLayout>


    </LinearLayout>


    </ScrollView>
</LinearLayout>