<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/drl_Opener"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/subtle"
            android:layout_marginBottom="20dp">

            <!--region Toolbar Region-->
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top">

                    <RelativeLayout
                        android:id="@+id/originalToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_openDrawer"
                            android:layout_width="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_baseline_menu_24"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/btn_openDrawer" />


                        <ImageView
                            android:id="@+id/iv_cart"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_baseline_search_24"
                            android:backgroundTint="@color/white"/>

                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <!--endregion-->


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@drawable/logo"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_margin="20dp"
                        android:visibility="gone"/>

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <!-- <com.daimajia.slider.library.Indicators.PagerIndicator
                         android:id="@+id/custom_indicator"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center" />

         -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/padding_10"
                        tools:ignore="MissingConstraints"
                        android:layout_above="@+id/rl_toolbar2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="@string/toprated"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp" />


                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:text="@string/viewmore"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewCourses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tv_category2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="@string/youmaylike"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp" />


                        <TextView
                            android:id="@+id/tv_more1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:text="@string/viewmore"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>


        <!--region Drawer-->
        <include layout="@layout/drawer_layout" />
        <!--endregion Drawer-->

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>